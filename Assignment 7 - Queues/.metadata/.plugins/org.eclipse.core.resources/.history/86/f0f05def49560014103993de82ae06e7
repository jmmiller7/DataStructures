
public class PrintTask 
{
	private final int MIN_NUM_PAGES = 1;		// min num pages to print
	private final int MAX_NUM_PAGES = 1000;		// max num of pages to print
	private int pagesToPrint = 0;
	private int	timeEnqueued;					// the time that the task is recieved and enqueued
	
	public PrintTask(int pagesToPrint)
	{
		if(MIN_NUM_PAGES > pagesToPrint || pagesToPrint > MAX_NUM_PAGES)
			return;
		
		this.pagesToPrint = pagesToPrint;
	}
			
	public int getPagesToPrint()
	{
		return pagesToPrint;
	}
	
	public void setPagesToPrint(int pages)
	{
		pagesToPrint = pages;
	}
	
	public int getTimeEnqueued()
	{
		return timeEnqueued;
	}
	
	public void setTimeEnqueued(int time)
	{
		this.timeEnqueued = time;
	}
	
	public int waitTime(int currentTime)
	{
		int timeWaited;
		
		timeWaited = currentTime - timeEnqueued;
		
		return timeWaited;
	}
	
	public int getMaxNumPages()
	{
		return MAX_NUM_PAGES;
	}
	}
}
